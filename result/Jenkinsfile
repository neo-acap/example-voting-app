pipeline {

    agent{
      docker{
        image 'node:8-alpine'
        args '-v $HOME/.m2:/root/.m2' }
    }

    stages{

      stage("build"){

        when{
          changeset "**/result/**"
        }

        steps{
          echo 'building result app'
          node --version
            dir('result'){
              sh 'npm install'
            }
          }
        }

        stage("test"){

            when{
              changeset "**/result/**"
            }

            steps{
                echo 'Running Unit Tets on result app'
                dir('result'){
                  sh 'npm test'
                }
            }
        }


      }

      post{
        always{
          echo 'Fatto tutto. Benbrai..'
        }
      }
}
